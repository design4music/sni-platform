# Strategic Narrative Intelligence - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/strategic_narratives

# DeepSeek API Configuration (for CLUST-2)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# RAI Service Configuration (for GEN-3)
RAI_ENABLED=false
RAI_BASE_URL=http://localhost:8000
RAI_API_KEY=your-rai-api-key-here
RAI_TIMEOUT=15
RAI_RETRIES=3

# GEN Pipeline Configuration
GEN_ENABLE_STAGE1=true
GEN_ENABLE_STAGE2=true  
GEN_ENABLE_STAGE3=true

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2

# Secret Key (for API security)
SECRET_KEY=your-secret-key-here

# Optional: Other LLM API Keys for future use
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here