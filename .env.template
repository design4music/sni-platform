# SNI-v2 Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sni_v2
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sni_v2
DB_USER=username
DB_PASSWORD=password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# LLM Configuration (for generation phase)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=openai  # or anthropic
LLM_MODEL=gpt-4-turbo-preview
MAX_TOKENS_PER_REQUEST=4000

# Processing Configuration
MAX_BUCKET_SIZE=100
DEFAULT_FETCH_INTERVAL=60
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
COSINE_THRESHOLD_DEDUP=0.95
COSINE_THRESHOLD_BUCKET=0.60

# Language Configuration
PRIMARY_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ru,zh

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sni_v2.log